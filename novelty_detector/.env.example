# API Keys - Add at least one for LLM-based prompt generation
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Novelty Detection Settings
DEFAULT_CHUNK_SIZE=150  # Target words per chunk
CHUNK_OVERLAP=20  # Words to overlap between chunks
NOVELTY_THRESHOLD_HIGH=0.7
NOVELTY_THRESHOLD_MEDIUM=0.4
NOVELTY_THRESHOLD_LOW=0.2

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2  # Sentence transformer model
