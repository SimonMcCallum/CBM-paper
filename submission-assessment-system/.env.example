# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_TYPE=sqlite
# For SQLite (development)
DB_PATH=./data/cbm_assessment.db
# For PostgreSQL (production)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cbm_assessment
# DB_USER=cbm_user
# DB_PASSWORD=your_password
# DB_POOL_SIZE=20

# LTI Configuration
LTI_KEY=cbm-assessment-tool
LTI_ISSUER=https://canvas.instructure.com
LTI_TOOL_URL=http://localhost:3000/lti
LTI_DEEP_LINKING_URL=http://localhost:3000/lti/deep-link
LTI_PUBLIC_KEY_PATH=./secrets/lti_public_key.pem
LTI_PRIVATE_KEY_PATH=./secrets/lti_private_key.pem

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf

# Novelty Detector Service
NOVELTY_DETECTOR_URL=http://localhost:5000
NOVELTY_THRESHOLD_HIGH=0.7
NOVELTY_THRESHOLD_LOW=0.4

# Embeddings Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
VECTOR_STORE=faiss

# Question Selection Configuration
STANDARD_QUESTIONS_COUNT=15
NOVEL_QUESTIONS_COUNT=10
ORAL_QUESTIONS_COUNT=8
MIN_SIMILARITY_THRESHOLD=0.6

# LLM Configuration
LLM_PROVIDER=claude
# claude, gemini, gpt, local

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Google Gemini
GOOGLE_API_KEY=your_google_api_key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7

# OpenAI GPT
OPENAI_API_KEY=your_openai_api_key
GPT_MODEL=gpt-4
GPT_TEMPERATURE=0.7

# Local LLM Server (Ollama, vLLM, etc.)
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=llama3
LOCAL_LLM_TEMPERATURE=0.7

# CBM Scoring Configuration
CBM_CONFIDENCE_5_CORRECT=2.0
CBM_CONFIDENCE_5_INCORRECT=-2.0
CBM_CONFIDENCE_4_CORRECT=1.5
CBM_CONFIDENCE_4_INCORRECT=-1.5
CBM_CONFIDENCE_3_CORRECT=1.0
CBM_CONFIDENCE_3_INCORRECT=-1.0
CBM_CONFIDENCE_2_CORRECT=0.5
CBM_CONFIDENCE_2_INCORRECT=-0.5
CBM_CONFIDENCE_1_CORRECT=0.0
CBM_CONFIDENCE_1_INCORRECT=0.0

# Export Configuration
EXPORT_DIR=./exports
EXPORT_FORMATS=csv,xlsx,pdf
EXPORT_INCLUDE_PII=false
EXPORT_RETENTION_DAYS=365

# Security
JWT_SECRET=your_jwt_secret_change_in_production
SESSION_SECRET=your_session_secret_change_in_production
BCRYPT_ROUNDS=10

# Monitoring & Logging
LOG_LEVEL=info
LOG_DIR=./logs
SENTRY_DSN=
METRICS_PORT=9090

# Development
DEBUG=false
ENABLE_SWAGGER=true
